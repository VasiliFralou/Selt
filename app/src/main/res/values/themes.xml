<resources>
    <style name="Theme.Selt" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/bgColor</item>
        <item name="colorPrimaryDark">@color/bgColor</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Theme.Selt.NoActionBar">
        <item name="colorPrimary">@color/bgColor</item>
        <item name="colorPrimaryVariant">@color/bgColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Selt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Selt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>