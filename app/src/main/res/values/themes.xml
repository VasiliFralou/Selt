<resources>
    <style name="Theme.Selt"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/mainColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/mainColor</item>
        <item name="colorSecondaryVariant">@color/mainColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:statusBarColor" >@android:color/white</item>
        <item name="android:fontFamily">@font/bretan_pro</item>
    </style>

    <style name="TextInputLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <!-- Цвет неактивной подсказки -->
        <item name="android:textColorHint">#000000</item>
        <!-- Цвет активноц подсказки -->
        <item name="hintTextColor">#000000</item>
    </style>

    <style name="TextInputLayoutAddAdsStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <!-- Цвет неактивной подсказки -->
        <item name="android:textColorHint">#4D000000</item>
        <!-- Цвет активной подсказки -->
        <item name="hintTextColor">#000000</item>
    </style>

    <style name="MaterialCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">75dp</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="HeadCardViewStyle"
        parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/customCornerHead</item>
        <item name="cardBackgroundColor">@color/head_and_footer_gray_item</item>
    </style>

    <style name="customCornerHead">
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="FooterCardViewStyle"
        parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/customCornerFooter</item>
        <item name="cardBackgroundColor">@color/head_and_footer_gray_item</item>
    </style>

    <style name="FooterCardViewStyle2"
        parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/customCornerFooter2</item>
        <item name="cardBackgroundColor">@color/head_and_footer_gray_item</item>
    </style>

    <style name="customCornerFooter">
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
    </style>

    <style name="customCornerFooter2">
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeTopRight">25dp</item>
    </style>

    <style name="TextLabel" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">#2E7D32</item>
        <item name="colorControlActivated">#1B5E20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.Selt.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Selt.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />
</resources>