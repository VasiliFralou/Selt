    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="by.vfdev.selt.UI.MainFragment"
        tools:layout="@layout/fragment_main" >
    </fragment>
    <fragment
        android:id="@+id/boardFragment"
        android:name="by.vfdev.selt.UI.BoardFragment"
        tools:layout="@layout/fragment_board" >
        <action
            android:id="@+id/action_boardFragment_to_adsDetailFragment"
            app:destination="@id/adsDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="by.vfdev.selt.UI.MapFragment"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/newAdsFragment"
        android:name="by.vfdev.selt.UI.NewAdsFragment"
        tools:layout="@layout/fragment_new_ads" />
    <fragment
        android:id="@+id/adsDetailFragment"
